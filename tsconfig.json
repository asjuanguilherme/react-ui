{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "incremental": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src"]
    },
    "outDir": "dist"
  },
  "extends": "@asjuanguilherme/tsconfig/react-library.json",
  "include": ["src/**/*.tsx", "src/**/*.ts", "styled.d.ts", "./tsup.config.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
