{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "incremental": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "target": "ESNext",
    "paths": {
      "~/*": ["src"]
    },
    "outDir": "dist"
  },
  "extends": "@asjuanguilherme/tsconfig/react-library.json",
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./styled.d.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
